---
import { useLocale } from "@utils/locale";
import ThemeSelect from "../components/ThemeSelect.astro";
const { path } = useLocale(Astro.url);
---

<div class="my-6 flex">
  <a
    href={path("/")}
    class="hover:cursor-pointer opacity-100 hover:opacity-80 no-underline"
  >
    <i class="hidden">website header </i>
    <h1 class="text-4xl leading-tight font-bold text-black dark:text-white">
      柳长街
    </h1>
  </a>
  <div class="text-sm place-content-center inline ml-auto">
    <!--<LanguageIcon />-->
    <span class="mx-1"></span>
    <ThemeSelect />
  </div>
</div>

<style>
  @font-face {
    font-family: 'CyLy';
    src: url('/fonts/ChenYuluoyan-2.0-Thin.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  
  h1 {
    font-family: 'CyLy', sans-serif;
  }
</style>