{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@plugins/*": ["src/plugins/*"],
      "@assets/*": ["src/assets/*"],
      "@loaders/*": ["src/loaders/*"]
    },
    "strictNullChecks": true, // add if using `base` template
    "allowJs": true // required, and included with all Astro templates
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.astro"]
}
